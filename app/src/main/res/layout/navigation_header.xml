<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/navDrawer_header_height"
    android:background="@color/colorAccent"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@email.com"
        android:id="@+id/header_email"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:id="@+id/header_name"
        android:layout_above="@+id/header_email"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="@dimen/nav_header_profile_image_width"
        android:layout_height="@dimen/nav_header_profile_image_height"
        android:id="@+id/header_profile_image"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/nav_header_profile_image_margin" />
</RelativeLayout>